{
	"manifest_version": 2,
	"name": "di/vision",
	"version": "0.1",


	"permissions": ["storage", "alarms"],

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js":["content.js"]
		}],

	"browser_action":{
		"default_icon":"icon.png",
		"default_title": "Di/Vision"
  		//"default_popup": "index.html"
	},

	"background": {
		"scripts": ["background.js"]
	}
}